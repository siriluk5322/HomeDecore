<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/secondaryTextColor"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvEditDelete"
        android:layout_toLeftOf="@+id/tvEditDelete"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productText"
                android:text="ชื่อสินค้า"
                android:textSize="20sp"
                android:layout_toRightOf="@id/imageProduct"/>
            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ราคา"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/imageProduct"
                android:layout_below="@id/productText"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEditDelete"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="EDIT/DELETE"
        android:textColor="#fc6b10"
        android:textSize="15sp"
        android:textStyle="bold"/>


</RelativeLayout>
